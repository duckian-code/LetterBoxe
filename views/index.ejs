<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>LetterBoxe</title>
  <link rel="stylesheet" href="/css/site.css" />
  <script defer src="/js/main.js"></script>
</head>
<body>

  <%- include('partials/header') %>

  <section class="hero">
    <h1>Discover. Rate. React.</h1>
    <p>Your personal cinema universe.</p>
    <a href="/movies" class="cta-btn">Explore Films</a>
  </section>

  <section class="movie-section">
    <h2>New Releases</h2>
    <div class="film-row">
      <% newMovies.forEach(movie => { %>
        <div class="film-card">
          <img src="<%= movie.poster %>" alt="<%= movie.title %>">
          <p><%= movie.title %></p>
          <span class="film-year"><%= movie.year %></span>
        </div>
      <% }) %>
    </div>
  </section>

  <section class="movie-section">
    <h2>Oscar Spotlight</h2>
    <div class="film-row">
      <% oscarMovies.forEach(movie => { %>
        <div class="film-card">
          <img src="<%= movie.poster %>" alt="<%= movie.title %>">
          <p><%= movie.title %></p>
          <span class="award-tag">üèÜ <%= movie.awards %></span>
        </div>
      <% }) %>
    </div>
  </section>

  <%- include('partials/PopularMovies') %>
  <%- include('partials/PopularReviews') %>
  <%- include('partials/footer') %>

</body>
</html>